extends ../layout

block content

    h1.display-4 Edit Profile
    
    form( action="/profile/edit" method="post" )
        
        .form-group
            label( for="display_name" ) Display Name
            input(
                name="display_name"
                type="text"
                class="form-control"
                id="display_name"
                value=user.display_name
            )
            small.form-text.text-muted
                | How you prefer to be addressed

        .form-group
            label( for="postcode" ) Postcode
            input(
                name="postcode"
                type="text"
                class="form-control"
                id="postcode"
            )
            small.form-text.text-muted
                | Used to calculate distance to a potential workplace

        button.btn.btn-primary( type="submit" )
            | Update Profile